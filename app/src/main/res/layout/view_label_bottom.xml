<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:paddingLeft="13dp">

    <TextView
        android:id="@+id/tag_input_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="官方赠予标签"
        android:textColor="#9b6b6c"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="10dp"/>

    <View
        android:id="@+id/split_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="#9b6b6c" />

    <com.ngc123.tag.view.FlowLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|top">

        <TextView
            style="@style/text_default"
            android:text="sirpan-nike:1286" />

        <TextView
            style="@style/text_default"
            android:text="中北大学:植树达人"/>

        <TextView
            style="@style/text_default"
            android:text="全聚德:烤鸭"/>

    </com.ngc123.tag.view.FlowLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_recycle"></android.support.v7.widget.RecyclerView>

</LinearLayout>