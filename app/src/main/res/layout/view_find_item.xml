<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/colorBackground"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="2dp"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.ngc123.tag.view.SquaredFrameLayout
                android:id="@+id/vImageRoot"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="350dp">
                <ImageView
                    android:id="@+id/id_iv_pic"
                    android:src="@drawable/default_pic_load"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
                <View
                    android:id="@+id/vBgLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_like_circle_background"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/ivLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/ic_heart_outline_white"
                    android:visibility="gone"/>
            </com.ngc123.tag.view.SquaredFrameLayout>

            <TextView
                android:id="@+id/id_tv_content"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#515151"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/id_iv_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/default_avatar"/>
                <TextView
                    android:id="@+id/id_tv_username"
                    android:gravity="center_vertical"
                    android:textColor="#979797"
                    android:layout_width="80dp"
                    android:maxLines="1"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:text=""/>
                <ImageView
                    android:id="@+id/id_iv_like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_heart_red"/>
                <TextView
                    android:id="@+id/id_tv_like"
                    android:gravity="center_vertical"
                    android:textColor="#979797"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:text="999"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>