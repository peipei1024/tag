<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorBackground"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/id_view_follow"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:background="@color/white"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/heart"
            android:src="@drawable/icon_follow"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:src="@mipmap/icon_grey_right_arrow"/>
        <TextView
            android:paddingLeft="16dp"
            android:layout_toRightOf="@id/heart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关注"
            android:textColor="#515151"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/id_view_comment"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="@color/white"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/comment"
            android:src="@drawable/icon_comment"
            android:layout_centerVertical="true"
            android:layout_width="27dp"
            android:layout_height="30dp"/>
        <ImageView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:src="@mipmap/icon_grey_right_arrow"/>
        <TextView
            android:id="@+id/id_tv_comment"
            android:paddingLeft="16dp"
            android:layout_toRightOf="@id/comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="评论"
            android:textColor="#515151"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/id_view_tongzhi"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="@color/white"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/tongzhi"
            android:src="@drawable/ic_heart_red"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:src="@mipmap/icon_grey_right_arrow"/>
        <TextView
            android:paddingLeft="16dp"
            android:layout_toRightOf="@id/tongzhi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="通知"
            android:textColor="#515151"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/id_view_like"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="@color/white"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/like"
            android:src="@drawable/ic_heart_red"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:src="@mipmap/icon_grey_right_arrow"/>
        <TextView
            android:paddingLeft="16dp"
            android:layout_toRightOf="@id/like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="赞"
            android:textColor="#515151"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
    </RelativeLayout>
</LinearLayout>